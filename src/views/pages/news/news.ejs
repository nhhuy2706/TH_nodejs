<div class="container mt-5">
    <h1>Danh sách Tin Tức</h1>
    <div class="row">
        <%
        const news = data.newsOnPage
        let stt =(data.currentPage -1) * 5;
        let pageNext = 0;
        if ( data.totalPages > 0){
          pageNext = data.currentPage+1;
         if(pageNext > data.totalPages){
           pageNext = data.totalPages
         }
        }
       %>
       <% news.forEach(function(news) {  %>
          
      
        <div class="col-md-4">
            <div class="card mb-3">
                <img src="https://i.ytimg.com/vi/-Toar0JSODA/maxresdefault.jpg" class="card-img-top" alt="Ảnh Tin Tức 1">
                <div class="card-body">
                    <h5 class="card-title"><a href="/newsDetail/<%= news.id  %>"><%= news.title  %></a></h5>
                    <p class="card-text"><%= news.author  %></p>
                    <p class="card-text"><%= news.publish_date  %></p>
                </div>
            </div>
        </div>
        <% }); %>
        <!-- Thêm các tin tức khác vào đây -->
    </div>
    <nav aria-label="Page navigation">
        <ul class="pagination ">
          <li class="page-item">
            <a class="page-link" href="/news/<%= data.currentPage - 1 %>" aria-label="Previous">
              <span aria-hidden="true">&laquo;</span>
            </a>
          </li>
          <% for (let i = 1; i <= data.totalPages; i++) { %>
          <li class="page-item">
            <a class="page-link" href="/news/<%= i %>"><%= i %></a>
          </li>
          <% } %>
          <li class="page-item">
            <a class="page-link" href="/news/<%= pageNext %>" aria-label="Next">
              <span aria-hidden="true">&raquo;</span>
            </a>
          </li>
        </ul>
      </nav>
</div>